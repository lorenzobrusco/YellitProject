<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:layout_collapseMode="pin" />


    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/displaysetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="Display"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorAccent" />

            <Switch
                android:id="@+id/EnableColorDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="enable color mode" />

            <LinearLayout
                android:id="@+id/colors_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <GridLayout
                    android:id="@+id/color_1_button_botton_bar"
                    android:layout_width="match_parent"
                    android:padding="4dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_fitness_center_black_24" />

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:layout_marginLeft="8dp"
                        android:text="Color Fitness Button" />

                    <ImageView
                        android:backgroundTint="@color/page1"
                        android:background="@drawable/rounded_color_selected"
                        android:layout_height="25dp"
                        android:layout_width="25dp"
                        android:layout_marginRight="16dp"
                        android:layout_gravity="center_vertical|end"
                        />

                </GridLayout>

                <GridLayout
                    android:id="@+id/color_2_button_botton_bar"
                    android:layout_width="match_parent"
                    android:padding="4dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_person_black_24" />

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:layout_marginLeft="8dp"
                        android:text="Color Profile Button" />

                    <ImageView
                        android:backgroundTint="@color/page2"
                        android:background="@drawable/rounded_color_selected"
                        android:layout_height="25dp"
                        android:layout_width="25dp"
                        android:layout_marginRight="16dp"
                        android:layout_gravity="center_vertical|end"
                        />

                </GridLayout>
                <GridLayout
                    android:id="@+id/color_3_button_botton_bar"
                    android:layout_width="match_parent"
                    android:padding="4dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_home_black_24dp" />

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:layout_marginLeft="8dp"
                        android:text="Color Home Button" />

                    <ImageView
                        android:backgroundTint="@color/page3"
                        android:background="@drawable/rounded_color_selected"
                        android:layout_height="25dp"
                        android:layout_width="25dp"
                        android:layout_marginRight="16dp"
                        android:layout_gravity="center_vertical|end"
                        />

                </GridLayout>
                <GridLayout
                    android:id="@+id/color_4_button_botton_bar"
                    android:layout_width="match_parent"
                    android:padding="4dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_public_black_24" />

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:layout_marginLeft="8dp"
                        android:text="Color New post Button" />

                    <ImageView
                        android:backgroundTint="@color/page4"
                        android:background="@drawable/rounded_color_selected"
                        android:layout_height="25dp"
                        android:layout_width="25dp"
                        android:layout_marginRight="16dp"
                        android:layout_gravity="center_vertical|end"
                        />

                </GridLayout>
                <GridLayout
                    android:id="@+id/color_5_button_botton_bar"
                    android:layout_width="match_parent"
                    android:padding="4dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_menu_black_24" />

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:layout_marginLeft="8dp"
                        android:text="Color Menu Button" />

                    <ImageView
                        android:backgroundTint="@color/page5"
                        android:background="@drawable/rounded_color_selected"
                        android:layout_height="25dp"
                        android:layout_width="25dp"
                        android:layout_marginRight="16dp"
                        android:layout_gravity="center_vertical|end"
                        />

                </GridLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/settingNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="Notifications"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorAccent" />


            <Switch
                android:id="@+id/EnableNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Notification" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="15dp"
                    android:text="Vibration"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/black" />

                <CheckBox
                    android:id="@+id/EnableVibration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/settingFitness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="Fitness"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorAccent" />

            <Switch
                android:id="@+id/EnableWear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="enable to see more details about you" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="Informations"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorAccent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="15dp"
                android:text="Build"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:text="@string/build_version"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="10dp"

                />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/privacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="15dp"
                    android:text="Privacy Policy"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
                    android:text="click to see info on privacy"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="10dp"

                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/welcomePage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="15dp"
                    android:text="Welcome pages"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
                    android:text="@string/play_again_desc"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="10dp"

                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray" />
        </LinearLayout>


    </ScrollView>

</LinearLayout>