<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activityCatalogSearchContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="This week:"
            android:textColor="@color/black"
            android:textSize="20dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/walk_horizontal_progress_bar_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/walk_hor"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_walking"
                app:riv_mutate_background="true"
                app:riv_oval="true"
                app:riv_tile_mode="repeat" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_toEndOf="@+id/walk_horizontal_progress_bar_icon"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="4dp"
                    android:text="10.0 km"
                    android:textColor="@color/black"
                    android:textSize="16dp" />


                <ProgressBar
                    android:id="@+id/walk_horizontal_progress_bar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:outlineProvider="paddedBounds"
                    android:progress="60"
                    android:progressBackgroundTint="@color/white"
                    android:progressTint="@color/walk_hor" />
            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">


            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/run_horizontal_progress_bar_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/running_hor"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_running"
                app:riv_mutate_background="true"
                app:riv_oval="true"
                app:riv_tile_mode="repeat" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_toEndOf="@+id/run_horizontal_progress_bar_icon"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="4dp"
                    android:text="5.0 km"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <ProgressBar
                    android:id="@+id/run_horizontal_progress_bar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:progress="40"
                    android:progressBackgroundTint="@color/white"
                    android:progressTint="@color/running_hor" />

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">


            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/bicycle_horizontal_progress_bar_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/bicycle_hor"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_bicycle"
                app:riv_mutate_background="true"
                app:riv_oval="true"
                app:riv_tile_mode="repeat" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_toEndOf="@+id/bicycle_horizontal_progress_bar_icon"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="4dp"
                    android:text="2.0 km"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <ProgressBar
                    android:id="@+id/bicycle_horizontal_progress_bar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:progress="20"
                    android:progressBackgroundTint="@color/white"
                    android:progressTint="@color/bicycle_hor" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>