<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activityCatalogSearchContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="This week:"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@color/walk"
                    android:src="@mipmap/ic_walking" />

                <com.daimajia.numberprogressbar.NumberProgressBar
                    android:id="@+id/walk_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:outlineProvider="none"
                    custom:progress_current="60"
                    custom:progress_max="100"
                    custom:progress_reached_bar_height="25dp"
                    custom:progress_reached_color="@color/walk"
                    custom:progress_text_color="@color/aluminum"
                    custom:progress_text_offset="5dp"
                    custom:progress_text_size="20sp"
                    custom:progress_text_visibility="visible"
                    custom:progress_unreached_bar_height="0dp"
                    custom:progress_unreached_color="#CCCCCC" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@color/running"
                    android:src="@mipmap/ic_running" />


                <com.daimajia.numberprogressbar.NumberProgressBar
                    android:id="@+id/run_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:outlineProvider="none"
                    custom:progress_current="30"
                    custom:progress_max="100"
                    custom:progress_reached_bar_height="25dp"
                    custom:progress_reached_color="@color/running"
                    custom:progress_text_color="@color/aluminum"
                    custom:progress_text_offset="5dp"
                    custom:progress_text_size="20sp"
                    custom:progress_text_visibility="visible"
                    custom:progress_unreached_bar_height="0dp"
                    custom:progress_unreached_color="#CCCCCC" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@color/bicycle"
                    android:src="@mipmap/ic_bicycle" />

                <com.daimajia.numberprogressbar.NumberProgressBar
                    android:id="@+id/bicycle_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:outlineProvider="none"
                    custom:progress_current="10"
                    custom:progress_max="100"
                    custom:progress_reached_bar_height="25dp"
                    custom:progress_reached_color="@color/bicycle"
                    custom:progress_text_color="@color/aluminum"
                    custom:progress_text_offset="5dp"
                    custom:progress_text_size="20sp"
                    custom:progress_text_visibility="visible"
                    custom:progress_unreached_bar_height="0dp"
                    custom:progress_unreached_color="#CCCCCC" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>